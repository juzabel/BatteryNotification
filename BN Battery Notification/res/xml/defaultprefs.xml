<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="options"
        android:title="@string/options" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/autostart"
            android:summary="@string/start_desc"
            android:title="@string/start" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/screenon"
            android:summary="@string/screen_on_desc"
            android:title="@string/screen_on" />

        <ListPreference
            android:entries="@array/updateInterval"
            android:entryValues="@array/updateIntervalValues"
            android:key="@string/updates_interval"
            android:summary="@string/update_desc"
            android:title="@string/update" />
    </PreferenceCategory>

</PreferenceScreen>